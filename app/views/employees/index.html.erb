<style>

.card-header{
  background-color:#fff;
}
.card-heade{
margin-right: 650px;
}

div {
    display: flex;
    justify-content: center;
}

</style>

<p style="color: green"><%= notice %></p>
<div align="center">
<div class="card w-75 mb-3">
  <h5 class="card-header">All Employees</h5>
  <h6 class="card-header mb-0 text-body-secondary">
  <table class="table table-striped table-bordered table-hover">  

        <thead>
            <tr>
            <th>Employees Name</th>
            <th>Project Number</th>
            </tr>
        </thead>  
    </h6>

    <div class="card-body">
    <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= link_to employee.name, employee_path(employee) %></td>
        <td><%= employee.projects.count%>
        <%= employee.projects.pluck(:name) %>
        </td>

      </tr>
   <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to "New employee", new_employee_path , class:"btn btn-primary btn-sm"%>

  </div>
</div>
</div>

<div align="center">
 <%= paginate @employees %>
</div>