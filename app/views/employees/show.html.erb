<style>

strong,h4 { 
  font-weight: bold;
  padding-left: 15px;
}

</style>
<br />
<h4>Employee Details</h4>

<br/>
<p>
  <strong>Emploee Name:</strong>
  <%= @employee.name %>
</p>
<p>
  <strong>Employee Projects:</strong>

  <table class="table table-striped table-bordered table-hover tbl">         
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
   
    <% @employee.projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project_path(project)%></td>
        <td><%= link_to 'View', project_path(project), class:"btn btn-info btn-sm" %></td>
      </tr>
    <% end %>
  </table>
</p>