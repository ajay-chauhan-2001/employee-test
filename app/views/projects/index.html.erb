
<style>

.card-header{
  background-color:#fff;
}
.card-heade{
margin-right: 650px;
}

body{
  text-decoration:none;
}


div {
    display: flex;
    justify-content: center;
}
</style>

<div align="center">

  <div class="card w-75 mb-3">
        <h5 class="card-header">All Projects</h5>
        <h6 class="card-header mb-0">
        <table class="table table-striped table-bordered table-hover">  

              <thead>
                  <tr>
                    <th>Project name</th>
                    <th>Team members</th>
                  </tr>
              </thead>  
          </h6>

          <div class="card-body">
          <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td><%= link_to project.name, project_path(project) %></td>
                <td><%= project.employees.count %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
        <%= link_to "New Project", new_project_path , class:"btn btn-primary btn-sm"%>

        </div>

      </div>

 </div>

<div align="center">
 <%= paginate @projects %>
</div>

    